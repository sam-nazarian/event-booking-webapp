{
  "name": "event-booking-webapp",
  "version": "1.0.0",
  "description": "A web app in which a user can book events or post new events.",
  "main": "server.js",
  "scripts": {
    "COMMENT:1": "BELOW IS FOR WATCHING/STARTING THE WEBAPP IN DEVELOPMENT MODE (WITH AUTO SAVE)",
    "watch:all": "npm-run-all --parallel watch:server watch:js watch:sass-main watch:sass-create-event-page watch:sass-get-event-page watch:sass-error-page watch:sass-share-event-page",
    "watch:server": "NODE_ENV=development nodemon server.js",
    "watch:js": "parcel serve ./public/js/index.js --dist-dir ./public/js/bundled --no-hmr",
    "watch:sass-main": "sass templates/sass/main.scss public/css/main.css -w",
    "watch:sass-create-event-page": "sass templates/sass/pages/createEventPage.scss public/css/createEventPage.css -w",
    "watch:sass-error-page": "sass templates/sass/pages/errorPage.scss public/css/errorPage.css -w",
    "watch:sass-get-event-page": "sass templates/sass/pages/getEventPage.scss public/css/getEventPage.css -w",
    "watch:sass-share-event-page": "sass templates/sass/pages/shareEventPage.scss public/css/shareEventPage.css -w",
    "COMMENT:2": "BELOW IS FOR BUILDING THE SVG SPRITE FILE FOR ICONS",
    "build:svg": "svg-sprite-generate -d ./public/img/svg -o ./public/img/sprite.svg",
    "COMMENT:3": "BELOW IS FOR BUILDING THE WEBAPP IN PRODUCTION MODE",
    "build:server": "NODE_ENV=production node server.js",
    "build:js": "parcel build ./public/js/index.js --dist-dir ./public/js/bundled",
    "build:css": "npm-run-all build:sass-main build:sass-create-event-page build:sass-error-page build:sass-get-event-page build:sass-share-event-page",
    "COMMENT:4": "BELOW IS FOR BUILDING CSS:",
    "build:sass-main": "npm-run-all compile:sass-main prefix:sass-main compress:sass-main",
    "build:sass-create-event-page": "npm-run-all compile:sass-create-event-page prefix:sass-create-event-page compress:sass-create-event-page",
    "build:sass-error-page": "npm-run-all compile:sass-error-page prefix:sass-error-page compress:sass-error-page",
    "build:sass-get-event-page": "npm-run-all compile:sass-get-event-page prefix:sass-get-event-page compress:sass-get-event-page",
    "build:sass-share-event-page": "npm-run-all compile:sass-share-event-page prefix:sass-share-event-page compress:sass-share-event-page",
    "COMMENT:5": "BELOW IS FOR COMPILING SASS:",
    "compile:sass-main": "sass templates/sass/main.scss public/css/main.comp.css",
    "compile:sass-create-event-page": "sass templates/sass/pages/createEventPage.scss public/css/createEventPage.comp.css",
    "compile:sass-error-page": "sass templates/sass/pages/errorPage.scss public/css/errorPage.comp.css",
    "compile:sass-get-event-page": "sass templates/sass/pages/getEventPage.scss public/css/getEventPage.comp.css",
    "compile:sass-share-event-page": "sass templates/sass/pages/shareEventPage.scss public/css/shareEventPage.comp.css",
    "COMMENT:6": "BELOW IS FOR PREFIXING CSS:",
    "prefix:sass-main": "postcss public/css/main.comp.css --use autoprefixer -o public/css/main.prefix.css",
    "prefix:sass-create-event-page": "postcss public/css/createEventPage.comp.css --use autoprefixer -o public/css/createEventPage.prefix.css",
    "prefix:sass-error-page": "postcss public/css/errorPage.comp.css --use autoprefixer -o public/css/errorPage.prefix.css",
    "prefix:sass-get-event-page": "postcss public/css/getEventPage.comp.css --use autoprefixer -o public/css/getEventPage.prefix.css",
    "prefix:sass-share-event-page": "postcss public/css/shareEventPage.comp.css --use autoprefixer -o public/css/shareEventPage.prefix.css",
    "COMMENT:7": "BELOW IS FOR COMPRESSING CSS:",
    "compress:sass-main": "sass public/css/main.prefix.css public/css/main.css --style compressed",
    "compress:sass-create-event-page": "sass public/css/createEventPage.prefix.css public/css/createEventPage.css --style compressed",
    "compress:sass-error-page": "sass public/css/errorPage.prefix.css public/css/errorPage.css --style compressed",
    "compress:sass-get-event-page": "sass public/css/getEventPage.prefix.css public/css/getEventPage.css --style compressed",
    "compress:sass-share-event-page": "sass public/css/shareEventPage.prefix.css public/css/shareEventPage.css --style compressed"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/samanfathnazarian/event-booking-webapp.git"
  },
  "author": "Saman Fathnazarian",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/samanfathnazarian/event-booking-webapp/issues"
  },
  "homepage": "https://github.com/samanfathnazarian/event-booking-webapp#readme",
  "dependencies": {
    "axios": "^1.2.1",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^6.6.0",
    "helmet": "^6.0.0",
    "hpp": "^0.2.3",
    "mongoose": "^6.7.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "parcel": "^2.8.1",
    "path": "^0.12.7",
    "pug": "^3.0.2",
    "sass": "^1.56.2",
    "sharp": "^0.31.2",
    "validator": "^13.7.0",
    "xss-clean": "^0.1.1"
  },
  "devDependencies": {
    "assert": "^2.0.0",
    "autoprefixer": "^10.4.13",
    "browserify-zlib": "^0.2.0",
    "crypto-browserify": "^3.12.0",
    "eslint": "^8.27.0",
    "events": "^3.3.0",
    "npm-run-all": "^4.1.5",
    "path-browserify": "^1.0.1",
    "postcss": "^8.4.21",
    "postcss-cli": "^10.1.0",
    "punycode": "^1.4.1",
    "querystring-es3": "^0.2.1",
    "stream-browserify": "^3.0.0",
    "stream-http": "^3.2.0",
    "string_decoder": "^1.3.0",
    "svg-sprite-generator": "^0.0.7",
    "url": "^0.11.0",
    "util": "^0.12.5"
  }
}
